<%- include('elements/_header') %>

<div class="container form-container">
    <div class="row">
        <div class="col-md-5 mx-auto mt-3">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">
                        Add new Program
                    </h3>
                </div>
                <div class="card-body  p-2">
                    <!-- route name -->
                    <form action="/add-program" method="post" id="add-form" enctype="multipart/form-data">

                        <div class="mb-2">
                            <label for="programid">Program ID</label>
                            <input type="text" name='programid' class="form-control form-control-sm" placeholder="Enter Studet Id" required/>
                        </div>
                        <div class="mb-2">
                            <label for="pname">Program name</label>
                            <input type="text" name='pname' class="form-control form-control-sm" placeholder="Enter Program Name" required/>
                        </div>
                        <div class="mb-2">
                            <label for="cost">Cost</label>
                            <input type="text" name='cost' class="form-control form-control-sm" id="search_input" placeholder="Cost Details" required/>
                        </div>
                        <div class="mb-2">
                            <label for="duration">Duration</label>
                            <input type="text" name='duration' class="form-control form-control-sm" id="search_input" placeholder="Contact Details" required/>
                        </div>
            

                        <div class="mb-3 d-grid">
                            <input type="Submit" name="submit" value="Create Program" class="btn btn-primary btn-md">
                        </div>

                    </form>
                </div>
            </div>
            
        </div>
    </div>
</div>

<%- include('elements/_footer') %> 