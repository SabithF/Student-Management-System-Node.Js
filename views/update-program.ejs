<%- include('elements/_header') %>

<div class="container form-container">
    <div class="row">
        <div class="col-md-5 mx-auto mt-3">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">
                        Update Student Details
                    </h3>
                </div>
                <div class="card-body  p-2">
                    <!-- route name -->
                    <form action="/update-student" method="post" id="update-form" enctype="multipart/form-data">

                        <div class="mb-2">
                            <label for="program_id">Program ID</label>
                            <input type="text" value="<%= program.program_id %>" name='program_id' class="form-control form-control-sm" placeholder="Enter Studet Id" required/>
                        </div>
                        <div class="mb-2">
                            <label for="duration">Program Duration</label>
                            <input type="text" name='duration' value="<%= program.duration %>" class="form-control form-control-sm" placeholder="Enter Program Duration" required/>
                        </div>
                        <div class="mb-2">
                            <label for="cost">Program Cost</label>
                            <input type="text" name='cost' value="<%= program.cost %>" class="form-control form-control-sm"  placeholder="cost Details" required/>
                        </div>
            

                        <div class="mb-3 d-grid">
                            <input type="Submit" name="Save" value="Update program" class="btn btn-primary btn-md">
                        </div>

                    </form>
                </div>
            </div>
            
        </div>
    </div>
</div>

<%- include('elements/_footer') %> 