<%- include('elements/_header') %>

<div class="container form-container">
    <div class="row">
        <div class="col-md-5 mx-auto mt-3">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">
                        Add new Student
                    </h3>
                </div>
                <div class="card-body  p-2">
                    <!-- route name -->
                    <form action="/add-student" method="post" id="add-form" >

                        <div class="mb-2">
                            <label for="studentid">Student ID</label>
                            <input type="text" name="studentid" class="form-control form-control-sm" placeholder="Enter Student ID"  required/>
                          </div>
                        <div class="mb-2">
                            <label for="name">Student name</label>
                            <input type="text" name='name' class="form-control form-control-sm" placeholder="Enter Student Name" required/>
                        </div>
                        <div class="mb-2">
                            <label for="address">Address</label>
                            <input type="text" name='address' class="form-control form-control-sm" id="search_input" placeholder="Address" required/>
                        </div>
                        <div class="mb-2">
                            <label for="contact">Contact</label>
                            <input type="text" name='contact' class="form-control form-control-sm" id="search_input" placeholder="Contact Details" required/>
                        </div>
            

                        <div class="mb-3 d-grid">
                            <input type="Submit" name="submit" value="Create student" class="btn btn-primary btn-md">
                        </div>

                    </form>
                </div>
            </div>
            
        </div>
    </div>
</div>

<%- include('elements/_footer') %> 